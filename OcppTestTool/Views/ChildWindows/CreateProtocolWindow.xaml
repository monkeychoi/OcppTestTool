<ui:FluentWindow x:Class="OcppTestTool.Views.ChildWindows.CreateProtocolWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                    Title="프로토콜 신규 등록"
                    Width="540"
                    SizeToContent="Height"
                    WindowStartupLocation="CenterOwner"
                    ResizeMode="NoResize"
                    ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0"
                     Title="프로토콜 등록"
                     ShowMinimize="False"
                     ShowMaximize="False"
                     ShowClose="True" />

        <Grid Margin="20"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>
            <TextBlock Text="Name" />
            <TextBox Grid.Row="1"
                     Text="{Binding Draft.Name, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="2"
                       Margin="0,10,0,0"
                       Text="Version" />
            <TextBox Grid.Row="3"
                     Text="{Binding Draft.Version, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Grid.Row="4"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                <StackPanel Width="200">
                    <TextBlock Text="Transport" />
                    <TextBox Text="{Binding Draft.Transport, UpdateSourceTrigger=PropertyChanged}" />
                    <!--<ComboBox SelectedItem="{Binding Draft.Transport}">
                        <ComboBoxItem Content="WebSocket" />
                        <ComboBoxItem Content="HTTP" />
                    </ComboBox>-->
                </StackPanel>
                <StackPanel Width="200"
                            Margin="10,0,0,0">
                    <TextBlock Text="Codec" />
                    <TextBox Text="{Binding Draft.Codec, UpdateSourceTrigger=PropertyChanged}" />
                    <!--<ComboBox SelectedItem="{Binding Draft.Codec}">
                        <ComboBoxItem Content="JSON" />
                        <ComboBoxItem Content="CBOR" />
                    </ComboBox>-->
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="5"
                        Margin="0,10,0,0">
                <TextBlock Text="Description" />
                <TextBox Height="80"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Text="{Binding Draft.Description, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Row="6"
                        Margin="0,10,0,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <ui:Button Content="취소"
                           Appearance="Dark"
                           Width="96"
                           Command="{Binding CancelCommand}"/>
                <ui:Button Content="저장"
                           IsDefault="True"
                           Appearance="Primary"
                           Width="96"
                           Command="{Binding SaveCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>