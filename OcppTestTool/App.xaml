<Application
    x:Class="OcppTestTool.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="AppFont">
                pack://application:,,,/Assets/Fonts/#Noto Sans KR
            </FontFamily>

            <!-- 전역 폰트 적용 -->
            <Style TargetType="{x:Type Control}">
                <Setter Property="FontFamily"
                        Value="{StaticResource AppFont}" />
            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily"
                        Value="{StaticResource AppFont}" />
            </Style>
            <Style TargetType="{x:Type TextElement}">
                <Setter Property="FontFamily"
                        Value="{StaticResource AppFont}" />
            </Style>

            <!-- BreadcrumbBar 전역 스타일 -->
            <Style TargetType="{x:Type ui:BreadcrumbBar}">
                <Setter Property="FontFamily"
                        Value="{StaticResource AppFont}" />
                <Setter Property="FontSize"
                        Value="18" />
            </Style>

            <!-- (있다면) 각 조각 컨테이너 타입에도 적용 -->
            <Style TargetType="{x:Type ui:BreadcrumbBarItem}">
                <Setter Property="FontFamily"
                        Value="{StaticResource AppFont}" />
                <Setter Property="FontSize"
                        Value="18" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
