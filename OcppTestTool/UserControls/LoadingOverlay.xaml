<UserControl x:Class="OcppTestTool.UserControls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:OcppTestTool.UserControls"
             mc:Ignorable="d"
             x:Name="Root"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             SnapsToDevicePixels="True">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Setter Property="Visibility"
                    Value="Collapsed" />
            <Setter Property="IsHitTestVisible"
                    Value="False" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsOpen, ElementName=Root}"
                             Value="True">
                    <Setter Property="Visibility"
                            Value="Visible" />
                    <Setter Property="IsHitTestVisible"
                            Value="True" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <!-- 전체 덮개 -->
    <Grid>
        <!-- 반투명 배경 -->
        <Border Background="{Binding OverlayBrush, ElementName=Root}"
                Opacity="{Binding OverlayOpacity, ElementName=Root}" />

        <!-- 가운데 카드 -->
        <Border CornerRadius="12"
                Padding="24"
                Background="{Binding CardBrush, ElementName=Root}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"
                                 Width="48"
                                 Height="48"
                                 Margin="0,0,0,12" />
                <TextBlock Text="{Binding Message, ElementName=Root}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           TextAlignment="Center"
                           Opacity="0.9" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
